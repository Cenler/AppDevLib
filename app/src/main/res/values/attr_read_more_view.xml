<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="ReadMoreTextView">
        <!-- trimLength 与 trimLines 同时存在时优先处理 trimLines -->
        <attr name="rmtv_trimLength" format="integer"/>
        <attr name="rmtv_trimLines" format="integer"/>
        <attr name="rmtv_trimExpandedText" format="string"/>
        <attr name="rmtv_trimCollapsedText" format="string"/>
        <!-- 展开后是否展示收起 -->
        <attr name="rmtv_showCollapsedText" format="boolean"/>
        <attr name="rmtv_clickableTextColor" format="color"/>
    </declare-styleable>

</resources>