<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="BaseAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- 全局主题配置 -->
        <!--<item name="android:windowTranslucentStatus">true</item>--><!-- 沉浸式状态栏属性 -->
        <!--<item name="android:windowTranslucentNavigation">true</item>--><!-- 沉浸式状态栏属性 -->
        <item name="android:windowIsTranslucent">true</item><!-- SwipeBack 黑屏处理 -->
        <item name="colorPrimaryDark">#0288D1</item><!-- Statebar Color 5.0支持 -->
        <item name="colorPrimary">#03A9F4</item><!-- Toolbar Color -->
        <item name="colorAccent">#FF4081</item><!-- Metral Design -->
        <item name="android:textColorPrimary">#FFFFFF</item>
    </style>

    <!-- BaseDialog 基本样式 -->
    <style name="BaseDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
    </style>

</resources>
